<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:button">@color/colorBtn</item>
        <item name="editTextColor">@color/colorTxt</item>
        <item name="android:textColor">@color/colorTxt</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColorSecondary">@color/colorTxtSecondary</item>
        <item name="actionMenuTextColor">@color/colorTxt</item>
        <item name="textAppearanceListItem">@color/colorTxt</item>
        <item name="actionBarItemBackground">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTxt</item>
        <item name="colorControlHighlight">@color/colorTxtSecondary</item>
        <item name="android:textColorHint">@color/colorTxt</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackgroundLightTheme</item>
        <item name="colorPrimaryDark">@color/colorTxt</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackgroundLightTheme</item>
        <item name="android:button">@color/colorBtn</item>
        <item name="editTextColor">@color/colorTxtLightTheme</item>
        <item name="android:textColor">@color/colorTxtLightTheme</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColorSecondary">@color/colorTxtSecondary</item>
        <item name="actionMenuTextColor">@color/colorTxtLightTheme</item>
        <item name="textAppearanceListItem">@color/colorTxtLightTheme</item>
        <item name="actionBarItemBackground">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTxtLightTheme</item>
        <item name="colorControlHighlight">@color/colorTxtSecondary</item>
        <item name="android:navigationBarColor">@color/colorTxtSecondary</item>
        <item name="android:itemBackground">@color/colorTxt</item>
        <item name="android:textColorHint">@color/colorTxtLightTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeDark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>