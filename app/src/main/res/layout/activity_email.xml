<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailActivity"
    android:padding="10dp">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_email_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>
            <Button
                android:minHeight="40dp"
                android:minWidth="30dp"
                android:id="@+id/btnEmailForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/colorBackground"
                android:drawableStart="@drawable/icon_forward"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="bottom"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:minHeight="40dp"
                android:minWidth="40dp"
                android:id="@+id/btnDeleteEmail"
                android:drawableStart="@drawable/icon_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/colorBackground"
                android:textColor="@color/colorTxt"
                android:layout_marginRight="20dp"
                app:layout_constraintEnd_toStartOf="@id/btnEmailForward"
                style="?android:attr/borderlessButtonStyle"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar_email_activity"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="8pt"
        android:paddingTop="15pt"
        android:layout_marginEnd="15pt"
        android:layout_marginTop="3pt"
        android:layout_marginStart="7pt"/>

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_email_activity_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:minHeight="30dp"
            android:minWidth="60dp"
            android:id="@+id/btnEmailReply"
            android:drawableStart="@drawable/icon_reply"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_reply"
            android:layout_centerVertical="true"
            android:background="@color/colorBackground"
            android:textColor="@color/colorTxt"
            android:textSize="6pt"
            app:layout_constraintBottom_toBottomOf="parent"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:id="@+id/btnEmailReplyToAll"
            android:drawableStart="@drawable/icon_reply_all"
            android:drawablePadding="8dp"
            android:text="@string/email_reply_to_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/colorBackground"
            android:textColor="@color/colorTxt"
            android:textSize="6pt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="15dp"
            android:padding="4dp"
            style="?android:attr/borderlessButtonStyle"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>
</android.support.constraint.ConstraintLayout>