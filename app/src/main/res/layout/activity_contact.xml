<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="12pt"/>

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_contact_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="4dp"
        app:layout_constraintTop_toBottomOf="@id/textView">


        <Button
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:id="@+id/btnContactBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:text="<"
            android:textColor="@color/colorTxt"
            android:textSize="6pt"
            app:layout_constraintEnd_toENdOf="parent"
            app:layout_contstraintLeft_toRightOf="parent" />

        <Button
            android:minHeight="30dp"
            android:minWidth="60dp"
            android:id="@+id/btnContactSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/colorBtn"
            android:text="@string/contact_save"
            android:textColor="@color/colorTxt"
            android:textSize="6pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_contstraintLeft_toRightOf="parent" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textViewFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_first"
        app:layout_constraintTop_toBottomOf="@id/toolbar_contact_activity"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="8pt"
        android:paddingTop="15pt"
        android:layout_marginTop="3pt"/>
    <TextView
        android:id="@+id/textViewLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_last"
        app:layout_constraintTop_toBottomOf="@id/textViewFirst"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="8pt"
        android:paddingTop="5pt"
        android:layout_marginTop="3pt"/>
    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_email"
        app:layout_constraintTop_toBottomOf="@id/textViewLast"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="8pt"
        android:paddingTop="5pt"
        android:layout_marginTop="3pt"/>

    <EditText
        android:inputType="text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textViewFirst"
        app:layout_constraintTop_toBottomOf="@id/toolbar_contact_activity"
        android:textSize="8pt"
        android:paddingTop="11pt"
        android:layout_marginTop="3pt"
        android:layout_marginStart="5pt"
        />

    <EditText
        android:inputType="text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textViewLast"
        app:layout_constraintTop_toBottomOf="@id/textViewFirst"
        android:textSize="8pt"
        android:paddingTop="1pt"
        android:layout_marginTop="3pt"
        android:layout_marginStart="6pt"/>

    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textViewEmail"
        app:layout_constraintTop_toBottomOf="@id/textViewLast"
        android:textSize="8pt"
        android:paddingTop="1pt"
        android:layout_marginTop="3pt"
        android:layout_marginStart="23pt"/>

</android.support.constraint.ConstraintLayout>