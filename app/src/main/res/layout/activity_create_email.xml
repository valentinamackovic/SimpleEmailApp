<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEmailActivity"
    android:padding="10dp">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_create_email_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/compose"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <Button
                android:minHeight="40dp"
                android:minWidth="40dp"
                android:id="@+id/btnCreateEmailSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="4dp"
                android:layout_centerVertical="true"
                android:background="@color/colorBackground"
                android:drawableStart="@drawable/icon_forward"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="bottom"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:minHeight="40dp"
                android:minWidth="40dp"
                android:id="@+id/btnCreateEmailCancel"
                android:drawableStart="@drawable/icon_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                app:layout_constraintEnd_toStartOf="@id/btnCreateEmailSend"
                android:layout_marginRight="20dp"
                android:padding="4dp"
                style="?android:attr/borderlessButtonStyle"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_create_email_activity"
        android:hint="@string/to"
        android:inputType="textEmailAddress"
        android:textSize="8pt"
        android:textColor="@color/colorTxt"
        android:textColorHint="@color/colorTxt"
        android:paddingTop="11pt"
        android:layout_marginTop="3pt"
        android:layout_marginEnd="10pt"
        android:layout_marginStart="5pt"/>
    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText"
        android:hint="@string/subject"
        android:inputType="text"
        android:textSize="8pt"
        android:textColor="@color/colorTxt"
        android:textColorHint="@color/colorTxt"
        android:paddingTop="11pt"
        android:layout_marginTop="3pt"
        android:layout_marginEnd="10pt"
        android:layout_marginStart="5pt"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/editText1"
        android:gravity="top|left"
        android:hint="@string/compose_email"
        android:lines="15"
        android:textColor="@color/colorTxt"
        android:textColorHint="@color/colorTxt"
        android:background="@android:color/transparent"
        android:scrollbars="vertical"
        android:textSize="8pt"
        android:paddingTop="11pt"
        android:layout_marginTop="3pt"
        android:layout_marginEnd="10pt"
        android:layout_marginStart="5pt"/>
</android.support.constraint.ConstraintLayout>